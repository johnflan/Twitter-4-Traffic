	    android:background="@drawable/splash_clouds">
	
			<ImageView
			    android:id="@+id/splash_bg"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/splash_logo" />
	</LinearLayout>
</LinearLayout>